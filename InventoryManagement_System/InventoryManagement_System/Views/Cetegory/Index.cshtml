@model IEnumerable<InventoryManagement_System.Models.CetegoryModel>



@{
    ViewData["Title"] = "Cetegory List";
    int i = 1;
}
    <style>
        body {
            font-family: Arial, sans-serif;
  
        }

        h1 {
            color: #333;
            margin-bottom:30px;
           
        }

        .container {
            margin: auto;
            background: white;
            border-radius: 8px;
             
        }

        .btn {
            display: inline-block;
            padding: 7px 15px;
            margin-bottom: 10px;
            background-color: green;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight:bold;
        }

        .add{
            background-color:royalblue;
            padding: 10px 18px;
        }

        .btn:hover{
            color:white;
        }

        table {
            
            border-collapse: collapse;
            margin-top: 10px;
            width:650px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px 10px;
            text-align: left;
            font-weight:bold;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        .action-links a {
            margin-right: 10px;
            
            text-decoration: none;
        }

        .edit{
            background-color : royalblue;
        }
        
        .details{
            background-color : darkorange;
        }

        .delete{
            background-color:red;
            color:white;
        }

        .action-links a:hover{
            color:white;
        }
    </style>

<body>

    <div class="container">
        <h1>Category List</h1>

        <a href="@Url.Action("InsertCetegory", "Cetegory")" class="btn add">Add New Cetegory</a>

        <table>
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

        
               
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@item.cetegoryName</td>
                        <td class="action-links">
                            <a href="@Url.Action("GetCetegoryById", "Cetegory", new { id = item.cetegoryId })" class="btn details">View</a>
                            <a href="@Url.Action("UpdateCetegory", "Cetegory", new { id = item.cetegoryId })" class="btn edit">Update</a>
                            <a href="@Url.Action("DeleteCetegory", "Cetegory", new { id = item.cetegoryId })" class="btn delete" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
     
</body>
</html>
