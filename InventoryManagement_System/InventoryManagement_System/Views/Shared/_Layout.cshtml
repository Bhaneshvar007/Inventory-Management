<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - InventoryManagement_System</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/InventoryManagement_System.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg shadow-sm">
			<div class="container d-flex justify-content-between align-items-center w-100">


				<a asp-controller="Home" asp-action="Index">
					<img src="https://5.imimg.com/data5/BK/YE/GT/SELLER-43910258/im-logo-500x500.png"
					style="height:60px"
					alt="Inventory Management" />
				</a>

				<div class="collapse navbar-collapse h-25" id="navbarNav">

						<ul class="navbar-nav ms-auto d-flex align-items-center">
							@if (Context.Session.GetString("Name") != null)
							{<li class="nav-item">

								<a class="nav-link fs-5 text-dark fw-semibold"
								asp-area="" asp-controller="Customer" asp-action="Index">
									Customer
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link fs-5 text-dark fw-semibold"
								asp-area="" asp-controller="Vendor" asp-action="Index">
									Vendor
								</a>
							</li>

							<li class="nav-item">
								<a class="nav-link fs-5 text-dark fw-semibold"
								asp-area="" asp-controller="Product" asp-action="Index">
									Products
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link fs-5 text-dark fw-semibold"
								asp-area="" asp-controller="Cetegory" asp-action="Index">
									Category
								</a>
							</li>
}
							@if (Context.Session.GetString("Name") == null)
							{
							<li class="nav-item">
								<a class="nav-link text-white fw-semibold btn btn-primary" style="margin-left:30px;"
								asp-area="" asp-controller="Authentication" asp-action="Index">
									Registration
								</a>
							</li>
							}
						else
						{
							<li class="nav-item dropdown" style="margin-left:30px;">
								<a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button"
								   data-bs-toggle="dropdown" aria-expanded="false">
									<img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="User Image" class="rounded-circle" style="width:40px; height:40px; object-fit:cover;">
								</a>
								<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
									<li class="dropdown-item text-center">
										<strong>@Context.Session.GetString("Name")</strong>
									</li>
									<li><hr class="dropdown-divider"></li>
									<li class="text-center">
										<a class="btn btn-danger btn-sm" asp-area="" asp-controller="Authentication" asp-action="Logout">Logout</a>
									</li>
								</ul>
							</li>

						}
						</ul>
					
				</div>
			</div>
		</nav>
	</header>

	<div class="container mt-4">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="bg-dark text-white text-center py-3 position-absolute bottom-0 w-100">
		<p class="mb-0">© @DateTime.Now.Year Inventory Management System. All rights reserved.</p>
	</footer>

	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
