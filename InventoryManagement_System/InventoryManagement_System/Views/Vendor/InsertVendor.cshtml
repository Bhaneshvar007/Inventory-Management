		@Html.ValidationMessage("vc_cetegoryId", "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.Label("Products") <span class="text-danger">*</span>
		<select id="ProductDropDown" class="form-control" name="vc_productId">
