@model ViewProductModel;

@{
	ViewData["Title"] = "Update Product";
}
<div class="container">
	<h2>Update Product</h2>

	<form action="UpdateProduct" method="post">
		<input type="hidden" name="Product.ProductId" value="@Model.Product.ProductId" />

		<div class="form-group">
			<label for="ProductName">Product Name</label>
			<input type="text" id="ProductName" name="Product.ProductName" class="form-control" required value="@Model.Product.ProductName" />
			<span class="text-danger"></span>
		</div>

		<div class="form-group">
			<label for="ProductBrand">Product Brand</label>
			<input type="text" id="ProductBrand" name="Product.ProductBrand" class="form-control" required value="@Model.Product.ProductBrand" />
			<span class="text-danger"></span>
		</div>

		<div class="form-group">
			<label for="ProductQuantity">Stock Quantity</label>
			<input type="number" id="ProductQuantity" name="Product.ProductQuantity" class="form-control" required value="@Model.Product.ProductQuantity" />
			<span class="text-danger"></span>
		</div>

		<div class="form-group">
			<label for="ProductPrice">Product Price</label>
			<input type="number" step="0.01" id="ProductPrice" name="Product.ProductPrice" class="form-control" required value="@Model.Product.ProductPrice" />
			<span class="text-danger"></span>
		</div>


		<div>
			<label for="cetegoryId">Category</label>
			<select name="cetegoryId" class="form-control" asp-items="@(new SelectList(Model.cetegoryModels, "cetegoryId", "cetegoryName"))">
				<option value="">Select Category</option>
			</select>
			<span asp-validation-for="cetegoryId" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary mt-5">Update Product</button>
		<a href="/Product/Index" class="btn btn-secondary mt-5">Back To List</a>
	</form>
</div>