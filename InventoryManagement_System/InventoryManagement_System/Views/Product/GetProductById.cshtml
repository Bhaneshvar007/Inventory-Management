@model InventoryManagement_System.Models.ProductModel

@{
    ViewData["Title"] = "Product Details";
}

<h1 class="text-center text-primary">Product Details</h1>

<div class="card shadow-lg p-4 mt-4">
    <h4 class="text-secondary">Product Information</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-4 font-weight-bold">Product ID</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductId)</dd>

        <dt class="col-sm-4 font-weight-bold">Product Name</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>

        <dt class="col-sm-4 font-weight-bold">Quantity</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductQuantity)</dd>

        <dt class="col-sm-4 font-weight-bold">Price</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductPrice) USD</dd>

        <dt class="col-sm-4 font-weight-bold">Brand</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductBrand)</dd>

        <dt class="col-sm-4 font-weight-bold">Category</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Cetegory.cetegoryName)</dd>
    </dl>
</div>

<div class="mt-4 text-center">
    <a href="@Url.Action("UpdateProduct", "Product", new { id = Model.ProductId })" class="btn">Edit</a>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back to List</a>
</div>

<style>
    .card {
        border-radius: 10px;
        background-color: #f8f9fa;
    }

    .font-weight-bold {
        font-weight: bold;
        color: #343a40;
    }
    .btn{
        background-color:royalblue;
        padding:8px 18px;
        color: white;
        font-weight: bold;
    }
    .btn:hover{
            background-color: royalblue;
            color:white;
     }


    .btn-secondary {
        font-weight: bold;
        background-color:green;
    }
    
    .btn-secondary:hover {
        
        background-color:green;
    }
</style>
