@model InventoryManagement_System.Models.ViewProductModel

<style>
    .btn {
        display: inline-block;
        padding: 7px 18px;
        margin-bottom: 10px;
        background-color: green;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
    }

    input {
        width: 400px;
    }

    .btn:hover {
        background-color: forestgreen;
    }

    .btn-secondary {
        background-color: royalblue;
    }

        .btn-secondary:hover {
            background-color: dodgerblue;
        }
</style>

<h2>Add Product</h2>

<form method="post">

    <span>@Html.HiddenFor(m => m.Product.ProductId)</span>

   
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" name="Product.ProductName" 
        class="form-control" />
        @Html.ValidationMessage("Product.ProductName", "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Quantity</label>
        <input type="number" name="Product.ProductQuantity" class="form-control" />
        @Html.ValidationMessage("Product.ProductQuantity", "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Price</label>
        <input type="number" step="0.01" name="Product.ProductPrice" class="form-control" />
        @Html.ValidationMessage("Product.ProductPrice", "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Brand</label>
        <input type="text" name="Product.ProductBrand" class="form-control" />
        @Html.ValidationMessage("Product.ProductBrand", "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Cetegory")
        @Html.DropDownList("cetegoryId", new SelectList(Model.cetegoryModels, "cetegoryId", "cetegoryName"), "Select Category", new { @class = "form-control" })
        @Html.ValidationMessage("cetegoryId", "", new { @class = "text-danger" })
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Submit</button>
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back to Home</a>
    </div>
</form>
