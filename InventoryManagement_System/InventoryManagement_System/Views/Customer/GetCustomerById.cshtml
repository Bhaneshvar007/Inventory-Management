@model InventoryManagement_System.Models.CustomerModel

@{
    ViewData["Title"] = "Product Details";
}

<h1 class="text-center text-primary">Customer Details</h1>

<div class="card shadow-lg p-4 mt-4">
    <h4 class="text-secondary">Customer Information</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-4 font-weight-bold">Customer ID</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Cust_id)</dd>

        <dt class="col-sm-4 font-weight-bold">Customer Name</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer_name)</dd>


        <dt class="col-sm-4 font-weight-bold">Customer Email</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer_email)</dd>


        <dt class="col-sm-4 font-weight-bold">Customer Adress</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer_address)</dd>

         
        <dt class="col-sm-4 font-weight-bold">Cetegory Name</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Cetegory.cetegoryName)</dd>

        <dt class="col-sm-4 font-weight-bold">Product Name</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.ProductName)</dd>

        <dt class="col-sm-4 font-weight-bold">Date_of_purchess</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Date_of_purchess)</dd>

        <dt class="col-sm-4 font-weight-bold">Quantity</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>

        <dt class="col-sm-4 font-weight-bold">Purchess_amount</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Purchess_amount)</dd>

    </dl>
</div>

<div class="mt-4 text-center">
    <a href="@Url.Action("UpdateCustomer", "Customer", new { id = Model.Cust_id })" class="btn">Edit</a>
    <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">Back to List</a>
</div>

<style>
    .card {
        border-radius: 10px;
        background-color: #f8f9fa;
    }

    .font-weight-bold {
        font-weight: bold;
        color: #343a40;
    }

    .btn {
        background-color: royalblue;
        padding: 8px 18px;
        color: white;
        font-weight: bold;
    }

        .btn:hover {
            background-color: royalblue;
            color: white;
        }


    .btn-secondary {
        font-weight: bold;
        background-color: green;
    }

        .btn-secondary:hover {
            background-color: green;
        }
</style>
